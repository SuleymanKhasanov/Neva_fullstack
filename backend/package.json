{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:status": "prisma migrate status",
    "migrate:create": "prisma migrate dev",
    "migrate:apply": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "db:seed": "ts-node scripts/seed-categories.ts",
    "db:seed:categories": "ts-node scripts/seed-categories.ts",
    "db:seed:brands": "ts-node scripts/seed-brands-from-catalog.ts",
    "db:seed:all": "yarn db:seed:categories && yarn db:seed:brands",
    "db:test": "ts-node scripts/test-loaded-data.ts",
    "db:setup": "yarn prisma:generate && yarn migrate:apply && yarn db:seed:all",
    "db:setup:fresh": "yarn prisma:reset && yarn db:seed:all",
    "docker:build": "docker build -t neva-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "cache:clear": "curl -X POST http://localhost:3000/admin/cache/clear -H \"Authorization: Bearer YOUR_TOKEN\"",
    "cache:stats": "curl http://localhost:3000/admin/cache/stats -H \"Authorization: Bearer YOUR_TOKEN\"",
    "dev:full": "yarn docker:run && sleep 10 && yarn db:setup && yarn start:dev",
    "dev:reset": "yarn docker:stop && yarn docker:clean && yarn dev:full",
    "catalog:parse": "ts-node scripts/parse-catalog-json.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.1",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.7.0",
    "apollo-server-express": "^3.13.0",
    "cache-manager": "^6.4.3",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "graphql": "^16.11.0",
    "ioredis": "^5.6.1",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.1",
    "@nestjs/schematics": "^11.0.1",
    "@nestjs/testing": "^11.1.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.13",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.7.4",
    "@types/node-fetch": "^2.6.12",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.16",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
