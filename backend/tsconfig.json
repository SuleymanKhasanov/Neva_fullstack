{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["../generated/prisma/index"],
      "@prisma/client/*": ["../generated/prisma/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["scripts/**/*", "../generated/**/*"],
  "exclude": ["node_modules"]
}
